<section class="ui raised segment" xmlns="http://www.w3.org/1999/html">
    <div class="ui grid">
        <aside class="six wide column">
            <img src="images/tweet2.jpg" class="ui small image">
        </aside>
        <article class="eight wide column">
            <table class="ui celled table segment">
                <thead>

                <tr>
                    <th>Message/Tweet</th>
                    <th>Message receiver</th>
                </tr>
                </thead>

               <tbody>
               <form action="/timeline_report" method="POST">
                <!--  <select id="del">-->
                {{#each tweets}}
                    <tr>

                      <td>

                    <div class="grouped inline fields">

                            <div class="field">
                                <div class="ui radio checkbox">
                                    <input type="radio" name="del" value="{{message}}">
                                    <label>{{message}}</label>
                                </div>
                                </div>
                            </div>

                      </td>

                   td> {{friend.lastName}}, {{friend.firstName}} </td>
                    </tr>
                {{/each}}

                </tbody>
            </table>
        </article>
    </div>

    <button class="ui orange submit button" > Delete selected message</button>
   </section>


